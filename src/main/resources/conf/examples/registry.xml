             with="https://pds-smallbodies.astro.umd.edu/" />
  </fileInfo>
  -->

  <!-- Include internal references. -->
  <!-- Convert lidvids to lids. Do not keep lidvids. -->
  <!--
  <internalRefs prefix="ref_">
    <lidvid convertToLid="false" keep="false" />
  </internalRefs>
  -->

  <!-- auto generate all fields from the pds4 labels -->
  <!--
