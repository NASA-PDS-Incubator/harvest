<?xml version="1.0" encoding="UTF-8"?>

<harvest>
  <directories>
    <!-- Path to a folder with some PDS4 product labels -->
    <path>/tmp/data</path>
    <!-- Only process XML files -->
    <fileFilter>
      <include>*.xml</include>
    </fileFilter>
  </directories>

  <!-- Include file info (name, type, size, md5). Do not store blobs. -->
  <fileInfo>
    <blobStorage type="none" />
  </fileInfo>

  <!-- Include internal references. Convert lidvids to lids. Do not keep lidvids. -->
  <internalRefs prefix="ref_">
    <lidvid convertToLid="true" keep="false" />
  </internalRefs>

</harvest>
